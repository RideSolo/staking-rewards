{
    "name": "@bancor/staking-rewards",
    "version": "0.0.1",
    "description": "Bancor staking rewards distribution",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bancorprotocol/staking-rwwards.git"
    },
    "homepage": "https://github.com/bancorprotocol/staking-rwwards#readme",
    "bugs": {
        "url": "https://github.com/bancorprotocol/staking-rwwards/issues"
    },
    "author": "Leonid Beder",
    "license": "MIT",
    "scripts": {
        "compile": "truffle compile",
        "test": "yarn compile && yarn qtest",
        "qtest": "mocha",
        "coverage": "truffle run coverage",
        "lint": "npm run lint:js && npm run lint:sol",
        "lint:js": "eslint .",
        "lint:sol": "solhint --max-warnings 0 \"solidity/contracts/**/*.sol\"",
        "format": "prettier --check --write solidity/**/*.sol solidity/**/*.js scripts/**/*.js *.js --config .prettierrc",
        "snyk-protect": "snyk protect",
        "prepare": "npm run snyk-protect"
    },
    "devDependencies": {
        "@bancor/token-governance": "bancorprotocol/token-governance",
        "@openzeppelin/contracts": "3.2.0",
        "@openzeppelin/test-environment": "^0.1.6",
        "@openzeppelin/test-helpers": "^0.5.6",
        "bn.js": "^5.1.2",
        "chai": "^4.2.0",
        "chai-arrays": "^2.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-bn": "^0.2.1",
        "chai-string": "^1.5.0",
        "decimal.js": "10.2.0",
        "dirty-chai": "^2.0.1",
        "eslint": "^7.5.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "memdown": "^5.1.0",
        "mocha": "^8.2.1",
        "prettier": "^2.2.0",
        "prettier-package-json": "^2.1.3",
        "prettier-plugin-solidity": "^1.0.0-beta.1",
        "snyk": "^1.369.0",
        "solc": "0.6.12",
        "solhint": "^3.1.0",
        "solidity-coverage": "^0.7.9",
        "truffle": "5.1.36",
        "web3": "1.2.11",
        "yargs": "^16.1.1"
    },
    "snyk": true
}
